# Task 2
pairs = {"{": "}", "(": ")", "[": "]", "<": ">"}
points = {"(": 1, "[": 2, "{": 3, "<": 4}

scores = []
with open("./Day_10/input.txt") as f:
    for line in f:
        stack = []
        for c in line.strip():
            if c in "([{<":
                stack.append(c)
            elif stack and pairs[stack[-1]] == c:
                stack.pop()
            else:
                break
        else:
            res = 0
            while stack:
                res = 5 * res + points[stack.pop()]
            scores.append(res)

scores.sort()
print("Task 2 =", scores[len(scores) // 2])
