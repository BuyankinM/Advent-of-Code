map = []

with open("./Day_09/input.txt") as f:
    for line in f:
        map.append([int(d) for d in line.strip()])

    res = 0
    m, n = len(map), len(map[0])
    dirs = [(-1, 0), (1, 0), (0, -1), (0, 1)]

    for i, line in enumerate(map):
        for j, val in enumerate(line):
            locations = []
            for di, dj in dirs:
                new_i, new_j = i + di, j + dj
                if 0 <= new_i <= m - 1 and 0 <= new_j <= n - 1:
                    locations.append(map[new_i][new_j])

            if val < min(locations):
                res += val + 1

print("Task 1 =", res)


# Task 2
map = []

with open("./Day_09/input.txt") as f:
    for line in f:
        map.append([int(d) for d in line.strip()])

    dirs = [(-1, 0), (1, 0), (0, -1), (0, 1)]
    points = set()

    m, n = len(map), len(map[0])
    for i, line in enumerate(map):
        for j, val in enumerate(line):
            locations = []
            for di, dj in dirs:
                new_i, new_j = i + di, j + dj
                if 0 <= new_i <= m - 1 and 0 <= new_j <= n - 1:
                    locations.append(map[new_i][new_j])

            if val < min(locations):
                points.add((i, j))

    basins = []
    for (i, j) in points:
        basin_size = 0
        visited = set()
        stack = [(map[i][j], i, j)]

        while stack:
            val, ii, jj = stack.pop()
            if (ii, jj) in visited:
                continue

            visited.add((ii, jj))
            basin_size += 1

            for di, dj in dirs:
                new_i, new_j = ii + di, jj + dj
                if (
                    0 <= new_i <= m - 1
                    and 0 <= new_j <= n - 1
                    and (new_i, new_j) not in visited
                ):
                    new_val = map[new_i][new_j]
                    if val < new_val < 9:
                        stack.append((new_val, new_i, new_j))

        basins.append(basin_size)

basins.sort()
result = reduce(mul, basins[-3:])
print("Task 2 =", result)


